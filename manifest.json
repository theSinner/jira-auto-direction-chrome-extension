{
    "name": "Jira Auto Direction",
    "version": "0.0.1",
    "description": "Using this extension will fix text align automaticaly",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/logo_16.png",
            "32": "images/logo_32.png",
            "48": "images/logo_48.png",
            "128": "images/logo_128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "all_frames": true,
            "js": [
                "content_script.js"
            ],
            "css": [
                "content_script.css"
            ]
        }
    ],
    "icons": {
        "16": "images/logo_16.png",
        "32": "images/logo_32.png",
        "48": "images/logo_48.png",
        "128": "images/logo_128.png"
    },
    "manifest_version": 2
}